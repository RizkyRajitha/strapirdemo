{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "post"
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "creator": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "publish": {
      "type": "boolean",
      "default": true
    },
    "markdown": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "overview": {
      "type": "richtext"
    }
  }
}
